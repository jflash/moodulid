<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">
    <name>Maksekeskus Estonia</name>
    <creationDate>10.06.2015</creationDate>
    <author>Matis Halmann - http://www.e-abi.ee/ (kuni 2014) & Joomla Eesti kogukond (alates 2015)</author>
    <authorUrl>http://www.eraser.ee/</authorUrl>
    <copyright>Copyright (C) 2015.</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <version>3</version>
    <description>Maksekeskus.ee pangalink VirtueMart 3.x-le</description>
    <languages>
    <language tag="en-GB">en-GB.plg_vmpayment_maksekeskus.ini</language>
    <language tag="et-EE">et-EE.plg_vmpayment_maksekeskus.ini</language>
    </languages>
    <files>
	   <filename plugin="maksekeskus">maksekeskus.php</filename>
     
    </files>

<vmconfig>
 <fields name="params">
    	<fieldset name="descriptions">
        <field name="destination_url" type="text" label="MAKSEKESKUS_DESTINATION_URL" description="MAKSEKESKUS_DESTINATION_URL_DESC" />
        <field name="shop_id" type="text" label="MAKSEKESKUS_SHOP_ID" description="MAKSEKESKUS_SHOP_ID_DESC" />
        <field name="api_secret" type="text" label="MAKSEKESKUS_API_SECRET" description="MAKSEKESKUS_API_SECRET_DESC" />
    	<field name="currency" type="vmacceptedcurrency" default="EUR" label="MAKSEKESKUS_CURRENCY" description="MAKSEKESKUS_CURRENCY_DESC" />
        <field name="locale" type="text" detault="et" label="MAKSEKESKUS_LOCALE" description="MAKSEKESKUS_LOCALE_DESC" />
        <field name="return" type="text" detault="" label="MAKSEKESKUS_RETURN" description="MAKSEKESKUS_RETURN_DESC" />
        <field name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="MAKSEKESKUS_STATUS_SUCCESS"  />
    	<field name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="MAKSEKESKUS_STATUS_FAILED" />
        <field name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMPAYMENT_STANDARD_COUNTRIES" description="VMPAYMENT_STANDARD_COUNTRIES_DESC"/>





	    </fieldset>
 </fields>
</vmconfig>
</extension>
